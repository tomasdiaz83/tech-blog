<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#each comments as |comment| }}
    <div class="row mb-4 post">
      <div class="col-md-5">
        <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
      </div>
      <div class="col-md-7">
        <p>
          {{comment.content}}
        </p>
      </div>
    </div>
  {{/each}}
</div>

{{!-- New Comment Form --}}

<div>
    <h3>Add a Comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
</div>

<script src="./js/comment.js"></script>